description "Caddy Server startup script"
author "Mathias Beke"

start on runlevel [2345]
stop on runlevel [016]


#setuid some-caddy-user
#setgid some-caddy-group

respawn
respawn limit 10 5

limit nofile <%= @ulimit %>

script
    cd <%= @workdir %>
    exec <%= @command %> <%= @options %>
end script
