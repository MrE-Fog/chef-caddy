[Unit]
Description=Caddy webserver
Documentation=https://caddyserver.com/
After=network.target

[Service]
#User=some_user
#Group=some_group
WorkingDirectory=<%= @workdir %>
LimitNOFILE=4096
ExecStart=/usr/local/bin/<%= @command %> <%= @options %>
Restart=on-failure
StartLimitInterval=600

[Install]
WantedBy=multi-user.target
